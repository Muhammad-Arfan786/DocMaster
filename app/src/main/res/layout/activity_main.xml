<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface"
    android:fitsSystemWindows="true"
    tools:context=".activities.MainActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:background="@android:color/transparent"
        app:elevation="0dp"
        app:liftOnScroll="true">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collapsingToolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true"
            app:layout_scrollFlags="scroll|exitUntilCollapsed|snap"
            app:contentScrim="?attr/colorSurface"
            app:expandedTitleGravity="start|bottom"
            app:expandedTitleMarginStart="@dimen/spacing_xlarge"
            app:expandedTitleMarginBottom="@dimen/spacing_xlarge">

            <!-- Hero content when expanded -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="?attr/actionBarSize"
                android:paddingHorizontal="@dimen/spacing_xlarge"
                android:paddingBottom="@dimen/spacing_xlarge"
                app:layout_collapseMode="parallax">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/app_name"
                    android:textSize="@dimen/hero_title_size"
                    android:textStyle="bold"
                    android:textColor="?attr/colorOnSurface" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_small"
                    android:text="PDF Tools &amp; Document Reader"
                    android:textSize="@dimen/hero_subtitle_size"
                    android:textColor="?attr/colorOnSurfaceVariant" />

            </LinearLayout>

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="?attr/actionBarSize"
                android:paddingTop="24dp"
                android:background="@android:color/transparent"
                app:layout_collapseMode="pin"
                app:menu="@menu/menu_main"
                app:navigationIconTint="?attr/colorOnSurface" />

        </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:clipToPadding="false"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="100dp">

            <!-- PDF Tools Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/card_margin"
                app:cardCornerRadius="@dimen/card_corner_radius_large"
                app:cardElevation="0dp"
                app:cardBackgroundColor="?attr/colorSurfaceContainerLow"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/card_padding">

                    <!-- Section Header -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="@dimen/spacing_small"
                        android:layout_marginBottom="@dimen/section_header_margin">

                        <ImageView
                            android:layout_width="@dimen/section_header_icon"
                            android:layout_height="@dimen/section_header_icon"
                            android:src="@drawable/ic_pdf"
                            app:tint="?attr/colorPrimary"
                            android:importantForAccessibility="no" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/spacing_medium"
                            android:text="PDF Tools"
                            android:textSize="@dimen/section_header_text"
                            android:textStyle="bold"
                            android:textColor="?attr/colorOnSurface" />

                    </LinearLayout>

                    <!-- Tools Grid - Row 1: Merge, Split, To Image, Rotate -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="@dimen/spacing_small">

                        <!-- Merge -->
                        <LinearLayout
                            android:id="@+id/toolMergePdf"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="@dimen/tool_padding"
                            android:background="@drawable/bg_tool_item"
                            android:clickable="true"
                            android:focusable="true">

                            <FrameLayout
                                android:layout_width="@dimen/tool_icon_container"
                                android:layout_height="@dimen/tool_icon_container"
                                android:background="@drawable/bg_tool_icon_circle"
                                android:backgroundTint="@color/tool_merge_bg">

                                <ImageView
                                    android:layout_width="@dimen/tool_icon_size"
                                    android:layout_height="@dimen/tool_icon_size"
                                    android:layout_gravity="center"
                                    android:src="@drawable/ic_merge"
                                    app:tint="@color/tool_merge"
                                    android:contentDescription="Merge PDFs" />
                            </FrameLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/tool_text_margin_top"
                                android:text="Merge"
                                android:textSize="@dimen/tool_text_size"
                                android:textColor="?attr/colorOnSurface"
                                android:maxLines="1" />
                        </LinearLayout>

                        <!-- Split -->
                        <LinearLayout
                            android:id="@+id/toolSplitPdf"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="@dimen/tool_padding"
                            android:background="@drawable/bg_tool_item"
                            android:clickable="true"
                            android:focusable="true">

                            <FrameLayout
                                android:layout_width="@dimen/tool_icon_container"
                                android:layout_height="@dimen/tool_icon_container"
                                android:background="@drawable/bg_tool_icon_circle"
                                android:backgroundTint="@color/tool_split_bg">

                                <ImageView
                                    android:layout_width="@dimen/tool_icon_size"
                                    android:layout_height="@dimen/tool_icon_size"
                                    android:layout_gravity="center"
                                    android:src="@drawable/ic_split"
                                    app:tint="@color/tool_split"
                                    android:contentDescription="Split PDF" />
                            </FrameLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/tool_text_margin_top"
                                android:text="Split"
                                android:textSize="@dimen/tool_text_size"
                                android:textColor="?attr/colorOnSurface"
                                android:maxLines="1" />
                        </LinearLayout>

                        <!-- To Image -->
                        <LinearLayout
                            android:id="@+id/toolPdfToImage"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="@dimen/tool_padding"
                            android:background="@drawable/bg_tool_item"
                            android:clickable="true"
                            android:focusable="true">

                            <FrameLayout
                                android:layout_width="@dimen/tool_icon_container"
                                android:layout_height="@dimen/tool_icon_container"
                                android:background="@drawable/bg_tool_icon_circle"
                                android:backgroundTint="@color/tool_image_bg">

                                <ImageView
                                    android:layout_width="@dimen/tool_icon_size"
                                    android:layout_height="@dimen/tool_icon_size"
                                    android:layout_gravity="center"
                                    android:src="@drawable/ic_image"
                                    app:tint="@color/tool_image"
                                    android:contentDescription="PDF to Image" />
                            </FrameLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/tool_text_margin_top"
                                android:text="To Image"
                                android:textSize="@dimen/tool_text_size"
                                android:textColor="?attr/colorOnSurface"
                                android:maxLines="1" />
                        </LinearLayout>

                        <!-- Rotate -->
                        <LinearLayout
                            android:id="@+id/toolRotate"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="@dimen/tool_padding"
                            android:background="@drawable/bg_tool_item"
                            android:clickable="true"
                            android:focusable="true">

                            <FrameLayout
                                android:layout_width="@dimen/tool_icon_container"
                                android:layout_height="@dimen/tool_icon_container"
                                android:background="@drawable/bg_tool_icon_circle"
                                android:backgroundTint="@color/tool_rotate_bg">

                                <ImageView
                                    android:layout_width="@dimen/tool_icon_size"
                                    android:layout_height="@dimen/tool_icon_size"
                                    android:layout_gravity="center"
                                    android:src="@drawable/ic_rotate"
                                    app:tint="@color/tool_rotate"
                                    android:contentDescription="Rotate Pages" />
                            </FrameLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/tool_text_margin_top"
                                android:text="Rotate"
                                android:textSize="@dimen/tool_text_size"
                                android:textColor="?attr/colorOnSurface"
                                android:maxLines="1" />
                        </LinearLayout>

                    </LinearLayout>

                    <!-- Tools Grid - Row 2: Delete, Extract, Edit, Watermark -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="@dimen/spacing_small">

                        <!-- Delete Pages -->
                        <LinearLayout
                            android:id="@+id/toolDeletePages"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="@dimen/tool_padding"
                            android:background="@drawable/bg_tool_item"
                            android:clickable="true"
                            android:focusable="true">

                            <FrameLayout
                                android:layout_width="@dimen/tool_icon_container"
                                android:layout_height="@dimen/tool_icon_container"
                                android:background="@drawable/bg_tool_icon_circle"
                                android:backgroundTint="@color/tool_delete_bg">

                                <ImageView
                                    android:layout_width="@dimen/tool_icon_size"
                                    android:layout_height="@dimen/tool_icon_size"
                                    android:layout_gravity="center"
                                    android:src="@drawable/ic_delete"
                                    app:tint="@color/tool_delete"
                                    android:contentDescription="Delete Pages" />
                            </FrameLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/tool_text_margin_top"
                                android:text="Delete"
                                android:textSize="@dimen/tool_text_size"
                                android:textColor="?attr/colorOnSurface"
                                android:maxLines="1" />
                        </LinearLayout>

                        <!-- Extract -->
                        <LinearLayout
                            android:id="@+id/toolExtract"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="@dimen/tool_padding"
                            android:background="@drawable/bg_tool_item"
                            android:clickable="true"
                            android:focusable="true">

                            <FrameLayout
                                android:layout_width="@dimen/tool_icon_container"
                                android:layout_height="@dimen/tool_icon_container"
                                android:background="@drawable/bg_tool_icon_circle"
                                android:backgroundTint="@color/tool_extract_bg">

                                <ImageView
                                    android:layout_width="@dimen/tool_icon_size"
                                    android:layout_height="@dimen/tool_icon_size"
                                    android:layout_gravity="center"
                                    android:src="@drawable/ic_extract"
                                    app:tint="@color/tool_extract"
                                    android:contentDescription="Extract Pages" />
                            </FrameLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/tool_text_margin_top"
                                android:text="Extract"
                                android:textSize="@dimen/tool_text_size"
                                android:textColor="?attr/colorOnSurface"
                                android:maxLines="1" />
                        </LinearLayout>

                        <!-- Edit -->
                        <LinearLayout
                            android:id="@+id/toolEditPdf"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="@dimen/tool_padding"
                            android:background="@drawable/bg_tool_item"
                            android:clickable="true"
                            android:focusable="true">

                            <FrameLayout
                                android:layout_width="@dimen/tool_icon_container"
                                android:layout_height="@dimen/tool_icon_container"
                                android:background="@drawable/bg_tool_icon_circle"
                                android:backgroundTint="@color/tool_edit_bg">

                                <ImageView
                                    android:layout_width="@dimen/tool_icon_size"
                                    android:layout_height="@dimen/tool_icon_size"
                                    android:layout_gravity="center"
                                    android:src="@drawable/ic_edit"
                                    app:tint="@color/tool_edit"
                                    android:contentDescription="Edit PDF" />
                            </FrameLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/tool_text_margin_top"
                                android:text="Edit"
                                android:textSize="@dimen/tool_text_size"
                                android:textColor="?attr/colorOnSurface"
                                android:maxLines="1" />
                        </LinearLayout>

                        <!-- Watermark -->
                        <LinearLayout
                            android:id="@+id/toolWatermark"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="@dimen/tool_padding"
                            android:background="@drawable/bg_tool_item"
                            android:clickable="true"
                            android:focusable="true">

                            <FrameLayout
                                android:layout_width="@dimen/tool_icon_container"
                                android:layout_height="@dimen/tool_icon_container"
                                android:background="@drawable/bg_tool_icon_circle"
                                android:backgroundTint="@color/tool_watermark_bg">

                                <ImageView
                                    android:layout_width="@dimen/tool_icon_size"
                                    android:layout_height="@dimen/tool_icon_size"
                                    android:layout_gravity="center"
                                    android:src="@drawable/ic_watermark"
                                    app:tint="@color/tool_watermark"
                                    android:contentDescription="Add Watermark" />
                            </FrameLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/tool_text_margin_top"
                                android:text="Watermark"
                                android:textSize="@dimen/tool_text_size"
                                android:textColor="?attr/colorOnSurface"
                                android:maxLines="1" />
                        </LinearLayout>

                    </LinearLayout>

                    <!-- Tools Grid - Row 3: Page No., Copy -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <!-- Page Numbers -->
                        <LinearLayout
                            android:id="@+id/toolPageNumbers"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="@dimen/tool_padding"
                            android:background="@drawable/bg_tool_item"
                            android:clickable="true"
                            android:focusable="true">

                            <FrameLayout
                                android:layout_width="@dimen/tool_icon_container"
                                android:layout_height="@dimen/tool_icon_container"
                                android:background="@drawable/bg_tool_icon_circle"
                                android:backgroundTint="@color/tool_pagenumbers_bg">

                                <ImageView
                                    android:layout_width="@dimen/tool_icon_size"
                                    android:layout_height="@dimen/tool_icon_size"
                                    android:layout_gravity="center"
                                    android:src="@drawable/ic_numbers"
                                    app:tint="@color/tool_pagenumbers"
                                    android:contentDescription="Add Page Numbers" />
                            </FrameLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/tool_text_margin_top"
                                android:text="Page No."
                                android:textSize="@dimen/tool_text_size"
                                android:textColor="?attr/colorOnSurface"
                                android:maxLines="1" />
                        </LinearLayout>

                        <!-- Copy -->
                        <LinearLayout
                            android:id="@+id/toolCopyPdf"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="@dimen/tool_padding"
                            android:background="@drawable/bg_tool_item"
                            android:clickable="true"
                            android:focusable="true">

                            <FrameLayout
                                android:layout_width="@dimen/tool_icon_container"
                                android:layout_height="@dimen/tool_icon_container"
                                android:background="@drawable/bg_tool_icon_circle"
                                android:backgroundTint="@color/tool_copy_bg">

                                <ImageView
                                    android:layout_width="@dimen/tool_icon_size"
                                    android:layout_height="@dimen/tool_icon_size"
                                    android:layout_gravity="center"
                                    android:src="@drawable/ic_copy"
                                    app:tint="@color/tool_copy"
                                    android:contentDescription="Copy PDF" />
                            </FrameLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/tool_text_margin_top"
                                android:text="Copy"
                                android:textSize="@dimen/tool_text_size"
                                android:textColor="?attr/colorOnSurface"
                                android:maxLines="1" />
                        </LinearLayout>

                        <!-- Placeholders for alignment -->
                        <View
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_weight="1" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_weight="1" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Recent Files Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/card_margin"
                android:layout_marginBottom="@dimen/card_margin"
                app:cardCornerRadius="@dimen/card_corner_radius_large"
                app:cardElevation="0dp"
                app:cardBackgroundColor="?attr/colorSurfaceContainerLow"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Recent Files Header -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingHorizontal="@dimen/spacing_large"
                        android:paddingTop="@dimen/spacing_large"
                        android:paddingBottom="@dimen/spacing_medium"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="@dimen/section_header_icon"
                            android:layout_height="@dimen/section_header_icon"
                            android:src="@drawable/ic_document"
                            app:tint="?attr/colorPrimary"
                            android:importantForAccessibility="no" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="@dimen/spacing_medium"
                            android:text="@string/recent_files"
                            android:textSize="@dimen/section_header_text"
                            android:textStyle="bold"
                            android:textColor="?attr/colorOnSurface" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnClearRecent"
                            android:layout_width="wrap_content"
                            android:layout_height="36dp"
                            android:text="@string/clear_recent"
                            android:textSize="@dimen/tool_text_size"
                            app:cornerRadius="18dp"
                            style="@style/Widget.Material3.Button.TextButton" />

                    </LinearLayout>

                    <!-- Recent Files RecyclerView -->
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerRecentFiles"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="@dimen/recent_min_height"
                        android:padding="@dimen/spacing_medium"
                        android:clipToPadding="false"
                        android:nestedScrollingEnabled="false" />

                    <!-- Empty State -->
                    <LinearLayout
                        android:id="@+id/emptyState"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="@dimen/empty_min_height"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="@dimen/spacing_xlarge"
                        android:visibility="gone">

                        <FrameLayout
                            android:layout_width="@dimen/empty_icon_container"
                            android:layout_height="@dimen/empty_icon_container"
                            android:background="@drawable/bg_tool_icon_circle"
                            android:backgroundTint="?attr/colorSurfaceContainerHigh">

                            <ImageView
                                android:layout_width="@dimen/empty_icon_size"
                                android:layout_height="@dimen/empty_icon_size"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_document"
                                app:tint="?attr/colorOutline"
                                android:importantForAccessibility="no" />
                        </FrameLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/section_header_margin"
                            android:text="@string/no_recent_files"
                            android:textSize="@dimen/empty_title_size"
                            android:textStyle="bold"
                            android:textColor="?attr/colorOnSurfaceVariant" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/spacing_small"
                            android:text="Tap the + button to open a document"
                            android:textSize="@dimen/empty_subtitle_size"
                            android:textColor="?attr/colorOutline"
                            android:gravity="center" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <!-- FAB to open file - Dynamic colors -->
    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/fabOpenFile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/fab_margin"
        android:text="Open File"
        android:textColor="?attr/colorOnPrimaryContainer"
        app:icon="@drawable/ic_add"
        app:iconTint="?attr/colorOnPrimaryContainer"
        app:backgroundTint="?attr/colorPrimaryContainer" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
