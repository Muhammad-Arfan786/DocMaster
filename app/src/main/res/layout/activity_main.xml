<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/background_light"
    tools:context=".activities.MainActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:elevation="0dp"
        app:elevation="0dp">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/primary"
            android:fitsSystemWindows="true"
            app:title="@string/app_name"
            app:titleTextColor="@android:color/white"
            app:menu="@menu/menu_main" />

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="80dp">

            <!-- PDF Tools Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/card_margin"
                app:cardCornerRadius="@dimen/card_corner_radius"
                app:cardElevation="2dp"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/card_padding">

                    <!-- Section Header -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="@dimen/spacing_small"
                        android:layout_marginBottom="@dimen/section_header_margin">

                        <ImageView
                            android:layout_width="@dimen/section_header_icon"
                            android:layout_height="@dimen/section_header_icon"
                            android:src="@drawable/ic_pdf"
                            app:tint="@color/primary" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/spacing_medium"
                            android:text="PDF Tools"
                            android:textSize="@dimen/section_header_text"
                            android:textStyle="bold"
                            android:textColor="?android:textColorPrimary" />

                    </LinearLayout>

                    <!-- Tools Grid - Row 1: Merge, Split, To Image, Rotate -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="@dimen/spacing_small">

                        <!-- Merge -->
                        <LinearLayout
                            android:id="@+id/toolMergePdf"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="@dimen/tool_padding"
                            android:background="@drawable/bg_tool_item"
                            android:clickable="true"
                            android:focusable="true">

                            <FrameLayout
                                android:layout_width="@dimen/tool_icon_container"
                                android:layout_height="@dimen/tool_icon_container"
                                android:background="@drawable/bg_tool_icon_circle"
                                android:backgroundTint="@color/tool_merge_bg">

                                <ImageView
                                    android:layout_width="@dimen/tool_icon_size"
                                    android:layout_height="@dimen/tool_icon_size"
                                    android:layout_gravity="center"
                                    android:src="@drawable/ic_merge"
                                    app:tint="@color/tool_merge" />
                            </FrameLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/tool_text_margin_top"
                                android:text="Merge"
                                android:textSize="@dimen/tool_text_size"
                                android:textColor="?android:textColorPrimary"
                                android:maxLines="1" />
                        </LinearLayout>

                        <!-- Split -->
                        <LinearLayout
                            android:id="@+id/toolSplitPdf"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="@dimen/tool_padding"
                            android:background="@drawable/bg_tool_item"
                            android:clickable="true"
                            android:focusable="true">

                            <FrameLayout
                                android:layout_width="@dimen/tool_icon_container"
                                android:layout_height="@dimen/tool_icon_container"
                                android:background="@drawable/bg_tool_icon_circle"
                                android:backgroundTint="@color/tool_split_bg">

                                <ImageView
                                    android:layout_width="@dimen/tool_icon_size"
                                    android:layout_height="@dimen/tool_icon_size"
                                    android:layout_gravity="center"
                                    android:src="@drawable/ic_split"
                                    app:tint="@color/tool_split" />
                            </FrameLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/tool_text_margin_top"
                                android:text="Split"
                                android:textSize="@dimen/tool_text_size"
                                android:textColor="?android:textColorPrimary"
                                android:maxLines="1" />
                        </LinearLayout>

                        <!-- To Image -->
                        <LinearLayout
                            android:id="@+id/toolPdfToImage"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="@dimen/tool_padding"
                            android:background="@drawable/bg_tool_item"
                            android:clickable="true"
                            android:focusable="true">

                            <FrameLayout
                                android:layout_width="@dimen/tool_icon_container"
                                android:layout_height="@dimen/tool_icon_container"
                                android:background="@drawable/bg_tool_icon_circle"
                                android:backgroundTint="@color/tool_image_bg">

                                <ImageView
                                    android:layout_width="@dimen/tool_icon_size"
                                    android:layout_height="@dimen/tool_icon_size"
                                    android:layout_gravity="center"
                                    android:src="@drawable/ic_image"
                                    app:tint="@color/tool_image" />
                            </FrameLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/tool_text_margin_top"
                                android:text="To Image"
                                android:textSize="@dimen/tool_text_size"
                                android:textColor="?android:textColorPrimary"
                                android:maxLines="1" />
                        </LinearLayout>

                        <!-- Rotate -->
                        <LinearLayout
                            android:id="@+id/toolRotate"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="@dimen/tool_padding"
                            android:background="@drawable/bg_tool_item"
                            android:clickable="true"
                            android:focusable="true">

                            <FrameLayout
                                android:layout_width="@dimen/tool_icon_container"
                                android:layout_height="@dimen/tool_icon_container"
                                android:background="@drawable/bg_tool_icon_circle"
                                android:backgroundTint="@color/tool_rotate_bg">

                                <ImageView
                                    android:layout_width="@dimen/tool_icon_size"
                                    android:layout_height="@dimen/tool_icon_size"
                                    android:layout_gravity="center"
                                    android:src="@drawable/ic_rotate"
                                    app:tint="@color/tool_rotate" />
                            </FrameLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/tool_text_margin_top"
                                android:text="Rotate"
                                android:textSize="@dimen/tool_text_size"
                                android:textColor="?android:textColorPrimary"
                                android:maxLines="1" />
                        </LinearLayout>

                    </LinearLayout>

                    <!-- Tools Grid - Row 2: Delete, Extract, Edit, Watermark -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="@dimen/spacing_small">

                        <!-- Delete Pages -->
                        <LinearLayout
                            android:id="@+id/toolDeletePages"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="@dimen/tool_padding"
                            android:background="@drawable/bg_tool_item"
                            android:clickable="true"
                            android:focusable="true">

                            <FrameLayout
                                android:layout_width="@dimen/tool_icon_container"
                                android:layout_height="@dimen/tool_icon_container"
                                android:background="@drawable/bg_tool_icon_circle"
                                android:backgroundTint="@color/tool_delete_bg">

                                <ImageView
                                    android:layout_width="@dimen/tool_icon_size"
                                    android:layout_height="@dimen/tool_icon_size"
                                    android:layout_gravity="center"
                                    android:src="@drawable/ic_delete"
                                    app:tint="@color/tool_delete" />
                            </FrameLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/tool_text_margin_top"
                                android:text="Delete"
                                android:textSize="@dimen/tool_text_size"
                                android:textColor="?android:textColorPrimary"
                                android:maxLines="1" />
                        </LinearLayout>

                        <!-- Extract -->
                        <LinearLayout
                            android:id="@+id/toolExtract"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="@dimen/tool_padding"
                            android:background="@drawable/bg_tool_item"
                            android:clickable="true"
                            android:focusable="true">

                            <FrameLayout
                                android:layout_width="@dimen/tool_icon_container"
                                android:layout_height="@dimen/tool_icon_container"
                                android:background="@drawable/bg_tool_icon_circle"
                                android:backgroundTint="@color/tool_extract_bg">

                                <ImageView
                                    android:layout_width="@dimen/tool_icon_size"
                                    android:layout_height="@dimen/tool_icon_size"
                                    android:layout_gravity="center"
                                    android:src="@drawable/ic_extract"
                                    app:tint="@color/tool_extract" />
                            </FrameLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/tool_text_margin_top"
                                android:text="Extract"
                                android:textSize="@dimen/tool_text_size"
                                android:textColor="?android:textColorPrimary"
                                android:maxLines="1" />
                        </LinearLayout>

                        <!-- Edit -->
                        <LinearLayout
                            android:id="@+id/toolEditPdf"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="@dimen/tool_padding"
                            android:background="@drawable/bg_tool_item"
                            android:clickable="true"
                            android:focusable="true">

                            <FrameLayout
                                android:layout_width="@dimen/tool_icon_container"
                                android:layout_height="@dimen/tool_icon_container"
                                android:background="@drawable/bg_tool_icon_circle"
                                android:backgroundTint="@color/tool_edit_bg">

                                <ImageView
                                    android:layout_width="@dimen/tool_icon_size"
                                    android:layout_height="@dimen/tool_icon_size"
                                    android:layout_gravity="center"
                                    android:src="@drawable/ic_edit"
                                    app:tint="@color/tool_edit" />
                            </FrameLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/tool_text_margin_top"
                                android:text="Edit"
                                android:textSize="@dimen/tool_text_size"
                                android:textColor="?android:textColorPrimary"
                                android:maxLines="1" />
                        </LinearLayout>

                        <!-- Watermark -->
                        <LinearLayout
                            android:id="@+id/toolWatermark"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="@dimen/tool_padding"
                            android:background="@drawable/bg_tool_item"
                            android:clickable="true"
                            android:focusable="true">

                            <FrameLayout
                                android:layout_width="@dimen/tool_icon_container"
                                android:layout_height="@dimen/tool_icon_container"
                                android:background="@drawable/bg_tool_icon_circle"
                                android:backgroundTint="@color/tool_watermark_bg">

                                <ImageView
                                    android:layout_width="@dimen/tool_icon_size"
                                    android:layout_height="@dimen/tool_icon_size"
                                    android:layout_gravity="center"
                                    android:src="@drawable/ic_watermark"
                                    app:tint="@color/tool_watermark" />
                            </FrameLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/tool_text_margin_top"
                                android:text="Watermark"
                                android:textSize="@dimen/tool_text_size"
                                android:textColor="?android:textColorPrimary"
                                android:maxLines="1" />
                        </LinearLayout>

                    </LinearLayout>

                    <!-- Tools Grid - Row 3: Page No., Copy -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <!-- Page Numbers -->
                        <LinearLayout
                            android:id="@+id/toolPageNumbers"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="@dimen/tool_padding"
                            android:background="@drawable/bg_tool_item"
                            android:clickable="true"
                            android:focusable="true">

                            <FrameLayout
                                android:layout_width="@dimen/tool_icon_container"
                                android:layout_height="@dimen/tool_icon_container"
                                android:background="@drawable/bg_tool_icon_circle"
                                android:backgroundTint="@color/tool_pagenumbers_bg">

                                <ImageView
                                    android:layout_width="@dimen/tool_icon_size"
                                    android:layout_height="@dimen/tool_icon_size"
                                    android:layout_gravity="center"
                                    android:src="@drawable/ic_numbers"
                                    app:tint="@color/tool_pagenumbers" />
                            </FrameLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/tool_text_margin_top"
                                android:text="Page No."
                                android:textSize="@dimen/tool_text_size"
                                android:textColor="?android:textColorPrimary"
                                android:maxLines="1" />
                        </LinearLayout>

                        <!-- Copy -->
                        <LinearLayout
                            android:id="@+id/toolCopyPdf"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="@dimen/tool_padding"
                            android:background="@drawable/bg_tool_item"
                            android:clickable="true"
                            android:focusable="true">

                            <FrameLayout
                                android:layout_width="@dimen/tool_icon_container"
                                android:layout_height="@dimen/tool_icon_container"
                                android:background="@drawable/bg_tool_icon_circle"
                                android:backgroundTint="@color/tool_copy_bg">

                                <ImageView
                                    android:layout_width="@dimen/tool_icon_size"
                                    android:layout_height="@dimen/tool_icon_size"
                                    android:layout_gravity="center"
                                    android:src="@drawable/ic_copy"
                                    app:tint="@color/tool_copy" />
                            </FrameLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/tool_text_margin_top"
                                android:text="Copy"
                                android:textSize="@dimen/tool_text_size"
                                android:textColor="?android:textColorPrimary"
                                android:maxLines="1" />
                        </LinearLayout>

                        <!-- Placeholders for alignment -->
                        <View
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_weight="1" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_weight="1" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Recent Files Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/card_margin"
                android:layout_marginBottom="@dimen/card_margin"
                app:cardCornerRadius="@dimen/card_corner_radius"
                app:cardElevation="2dp"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Recent Files Header -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingHorizontal="@dimen/spacing_large"
                        android:paddingTop="@dimen/spacing_large"
                        android:paddingBottom="@dimen/spacing_medium"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="@dimen/section_header_icon"
                            android:layout_height="@dimen/section_header_icon"
                            android:src="@drawable/ic_document"
                            app:tint="@color/primary" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="@dimen/spacing_medium"
                            android:text="@string/recent_files"
                            android:textSize="@dimen/section_header_text"
                            android:textStyle="bold"
                            android:textColor="?android:textColorPrimary" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnClearRecent"
                            android:layout_width="wrap_content"
                            android:layout_height="36dp"
                            android:text="@string/clear_recent"
                            android:textSize="@dimen/tool_text_size"
                            app:cornerRadius="18dp"
                            style="@style/Widget.Material3.Button.TextButton" />

                    </LinearLayout>

                    <!-- Recent Files RecyclerView -->
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerRecentFiles"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="@dimen/recent_min_height"
                        android:padding="@dimen/spacing_medium"
                        android:clipToPadding="false"
                        android:nestedScrollingEnabled="false" />

                    <!-- Empty State -->
                    <LinearLayout
                        android:id="@+id/emptyState"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="@dimen/empty_min_height"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="@dimen/spacing_xlarge"
                        android:visibility="gone">

                        <FrameLayout
                            android:layout_width="@dimen/empty_icon_container"
                            android:layout_height="@dimen/empty_icon_container"
                            android:background="@drawable/bg_tool_icon_circle"
                            android:backgroundTint="#F5F5F5">

                            <ImageView
                                android:layout_width="@dimen/empty_icon_size"
                                android:layout_height="@dimen/empty_icon_size"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_document"
                                app:tint="#BDBDBD" />
                        </FrameLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/section_header_margin"
                            android:text="@string/no_recent_files"
                            android:textSize="@dimen/empty_title_size"
                            android:textStyle="bold"
                            android:textColor="?android:textColorSecondary" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/spacing_small"
                            android:text="Tap the + button to open a document"
                            android:textSize="@dimen/empty_subtitle_size"
                            android:textColor="?android:textColorSecondary"
                            android:gravity="center" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <!-- FAB to open file -->
    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/fabOpenFile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/fab_margin"
        android:text="Open File"
        android:textColor="@android:color/white"
        app:icon="@drawable/ic_add"
        app:iconTint="@android:color/white"
        app:backgroundTint="@color/accent" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
