<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/viewer_background"
    tools:context=".activities.PdfViewerActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primary">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/primary"
            app:navigationIcon="@drawable/ic_back"
            app:navigationIconTint="@android:color/white"
            app:navigationContentDescription="@string/cd_navigate_back"
            app:titleTextColor="@android:color/white"
            app:menu="@menu/menu_pdf_viewer" />

        <!-- Edit Toolbar -->
        <HorizontalScrollView
            android:id="@+id/editToolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/primary_dark"
            android:visibility="gone"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="@dimen/bottom_nav_height"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingHorizontal="@dimen/spacing_medium">

                <!-- Pen Tool -->
                <ImageButton
                    android:id="@+id/btnPen"
                    android:layout_width="@dimen/editor_tool_button_size"
                    android:layout_height="@dimen/editor_tool_button_size"
                    android:layout_marginEnd="@dimen/spacing_small"
                    android:background="@drawable/bg_tool_button"
                    android:src="@drawable/ic_pen"
                    android:padding="@dimen/spacing_medium"
                    android:contentDescription="@string/cd_tool_pen"
                    app:tint="@color/icon_white" />

                <!-- Highlighter Tool -->
                <ImageButton
                    android:id="@+id/btnHighlighter"
                    android:layout_width="@dimen/editor_tool_button_size"
                    android:layout_height="@dimen/editor_tool_button_size"
                    android:layout_marginEnd="@dimen/spacing_small"
                    android:background="@drawable/bg_tool_button"
                    android:src="@drawable/ic_highlighter"
                    android:padding="@dimen/spacing_medium"
                    android:contentDescription="@string/cd_tool_highlighter"
                    app:tint="@color/icon_white" />

                <!-- Text Tool -->
                <ImageButton
                    android:id="@+id/btnText"
                    android:layout_width="@dimen/editor_tool_button_size"
                    android:layout_height="@dimen/editor_tool_button_size"
                    android:layout_marginEnd="@dimen/spacing_small"
                    android:background="@drawable/bg_tool_button"
                    android:src="@drawable/ic_text"
                    android:padding="@dimen/spacing_medium"
                    android:contentDescription="@string/cd_tool_text"
                    app:tint="@color/icon_white" />

                <!-- Eraser Tool -->
                <ImageButton
                    android:id="@+id/btnEraser"
                    android:layout_width="@dimen/editor_tool_button_size"
                    android:layout_height="@dimen/editor_tool_button_size"
                    android:layout_marginEnd="@dimen/spacing_medium"
                    android:background="@drawable/bg_tool_button"
                    android:src="@drawable/ic_eraser"
                    android:padding="@dimen/spacing_medium"
                    android:contentDescription="@string/cd_tool_eraser"
                    app:tint="@color/icon_white" />

                <View
                    style="@style/Widget.TenDocmas.ToolbarDivider" />

                <!-- Color Red -->
                <ImageButton
                    android:id="@+id/btnColorRed"
                    android:layout_width="@dimen/color_button_size"
                    android:layout_height="@dimen/color_button_size"
                    android:layout_marginEnd="@dimen/spacing_small"
                    android:padding="@dimen/spacing_medium"
                    android:background="@drawable/bg_color_button_red"
                    android:contentDescription="@string/cd_color_red" />

                <!-- Color Blue -->
                <ImageButton
                    android:id="@+id/btnColorBlue"
                    android:layout_width="@dimen/color_button_size"
                    android:layout_height="@dimen/color_button_size"
                    android:layout_marginEnd="@dimen/spacing_small"
                    android:padding="@dimen/spacing_medium"
                    android:background="@drawable/bg_color_button_blue"
                    android:contentDescription="@string/cd_color_blue" />

                <!-- Color Green -->
                <ImageButton
                    android:id="@+id/btnColorGreen"
                    android:layout_width="@dimen/color_button_size"
                    android:layout_height="@dimen/color_button_size"
                    android:layout_marginEnd="@dimen/spacing_small"
                    android:padding="@dimen/spacing_medium"
                    android:background="@drawable/bg_color_button_green"
                    android:contentDescription="@string/cd_color_green" />

                <!-- Color Yellow -->
                <ImageButton
                    android:id="@+id/btnColorYellow"
                    android:layout_width="@dimen/color_button_size"
                    android:layout_height="@dimen/color_button_size"
                    android:layout_marginEnd="@dimen/spacing_medium"
                    android:padding="@dimen/spacing_medium"
                    android:background="@drawable/bg_color_button_yellow"
                    android:contentDescription="@string/cd_color_yellow" />

                <View
                    style="@style/Widget.TenDocmas.ToolbarDivider" />

                <!-- Undo -->
                <ImageButton
                    android:id="@+id/btnUndo"
                    android:layout_width="@dimen/editor_tool_button_size"
                    android:layout_height="@dimen/editor_tool_button_size"
                    android:layout_marginEnd="@dimen/spacing_small"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/ic_undo"
                    android:padding="@dimen/spacing_medium"
                    android:contentDescription="@string/cd_tool_undo"
                    app:tint="@color/icon_white" />

                <!-- Redo -->
                <ImageButton
                    android:id="@+id/btnRedo"
                    android:layout_width="@dimen/editor_tool_button_size"
                    android:layout_height="@dimen/editor_tool_button_size"
                    android:layout_marginEnd="@dimen/spacing_small"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/ic_redo"
                    android:padding="@dimen/spacing_medium"
                    android:contentDescription="@string/cd_tool_redo"
                    app:tint="@color/icon_white" />

                <!-- Clear -->
                <ImageButton
                    android:id="@+id/btnClear"
                    android:layout_width="@dimen/editor_tool_button_size"
                    android:layout_height="@dimen/editor_tool_button_size"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/ic_clear"
                    android:padding="@dimen/spacing_medium"
                    android:contentDescription="@string/cd_tool_clear"
                    app:tint="@color/icon_white" />

            </LinearLayout>

        </HorizontalScrollView>

    </com.google.android.material.appbar.AppBarLayout>

    <!-- PDF Pages with Drawing Overlay -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <HorizontalScrollView
            android:id="@+id/horizontalScrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <androidx.core.widget.NestedScrollView
                android:id="@+id/scrollView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fillViewport="true">

                <LinearLayout
                    android:id="@+id/pagesContainer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:padding="@dimen/spacing_medium" />

            </androidx.core.widget.NestedScrollView>

        </HorizontalScrollView>

        <!-- Drawing Overlay (for edit mode) -->
        <com.docreader.views.DrawingView
            android:id="@+id/drawingView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone" />

    </FrameLayout>

    <!-- Loading Indicator -->
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone" />

    <!-- Bottom Navigation Bar -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/bottomBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_margin="@dimen/fab_margin"
        app:cardCornerRadius="@dimen/bottom_nav_corner_radius"
        app:cardElevation="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/bottom_nav_height"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingHorizontal="@dimen/spacing_medium">

            <!-- Zoom Out -->
            <ImageButton
                android:id="@+id/btnZoomOut"
                android:layout_width="@dimen/bottom_bar_button_size"
                android:layout_height="@dimen/bottom_bar_button_size"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_zoom_out"
                android:contentDescription="@string/cd_zoom_out"
                app:tint="?android:textColorPrimary" />

            <!-- Zoom Label -->
            <TextView
                android:id="@+id/tvZoom"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="100%"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.TenDocmas.Subtitle"
                android:textColor="?android:textColorPrimary" />

            <!-- Zoom In -->
            <ImageButton
                android:id="@+id/btnZoomIn"
                android:layout_width="@dimen/bottom_bar_button_size"
                android:layout_height="@dimen/bottom_bar_button_size"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_zoom_in"
                android:contentDescription="@string/cd_zoom_in"
                app:tint="?android:textColorPrimary" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <!-- Previous Page -->
            <ImageButton
                android:id="@+id/btnPrevPage"
                android:layout_width="@dimen/bottom_bar_button_size"
                android:layout_height="@dimen/bottom_bar_button_size"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_chevron_left"
                android:contentDescription="@string/cd_page_previous"
                app:tint="?android:textColorPrimary" />

            <!-- Page Info -->
            <TextView
                android:id="@+id/tvPageInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1 / 1"
                android:textAppearance="@style/TextAppearance.TenDocmas.Subtitle"
                android:textColor="?android:textColorPrimary"
                android:minWidth="60dp"
                android:textAlignment="center" />

            <!-- Next Page -->
            <ImageButton
                android:id="@+id/btnNextPage"
                android:layout_width="@dimen/bottom_bar_button_size"
                android:layout_height="@dimen/bottom_bar_button_size"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_chevron_right"
                android:contentDescription="@string/cd_page_next"
                app:tint="?android:textColorPrimary" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- Save Edit FAB (visible in edit mode) -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabSaveEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/fab_margin"
        android:layout_marginBottom="88dp"
        android:src="@drawable/ic_save"
        android:visibility="gone"
        android:contentDescription="@string/cd_save_edit"
        app:tint="@android:color/white" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
