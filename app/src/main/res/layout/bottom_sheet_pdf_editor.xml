<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="?android:colorBackground"
    android:padding="@dimen/spacing_large">

    <!-- Handle -->
    <View
        style="@style/Widget.TenDocmas.BottomSheetHandle" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="PDF Editor"
        android:textAppearance="@style/TextAppearance.TenDocmas.Headline"
        android:layout_marginBottom="@dimen/bottom_sheet_title_margin" />

    <!-- Page Operations Section -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/section_page_operations"
        android:textAppearance="@style/TextAppearance.TenDocmas.Subtitle"
        android:layout_marginBottom="@dimen/spacing_medium" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="4"
        android:rowCount="2"
        android:layout_marginBottom="@dimen/spacing_large">

        <!-- Delete Page -->
        <LinearLayout
            android:id="@+id/btnDeletePage"
            style="@style/Widget.TenDocmas.EditorGridItem"
            android:contentDescription="@string/cd_delete_page">

            <ImageView
                style="@style/Widget.TenDocmas.EditorGridIcon"
                android:src="@drawable/ic_delete_page"
                android:importantForAccessibility="no" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/op_delete_page"
                android:textAppearance="@style/TextAppearance.TenDocmas.ToolLabel"
                android:layout_marginTop="@dimen/spacing_small" />
        </LinearLayout>

        <!-- Rotate Page -->
        <LinearLayout
            android:id="@+id/btnRotatePage"
            style="@style/Widget.TenDocmas.EditorGridItem"
            android:contentDescription="@string/cd_rotate_page">

            <ImageView
                style="@style/Widget.TenDocmas.EditorGridIcon"
                android:src="@drawable/ic_rotate"
                android:importantForAccessibility="no" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/op_rotate_page"
                android:textAppearance="@style/TextAppearance.TenDocmas.ToolLabel"
                android:layout_marginTop="@dimen/spacing_small" />
        </LinearLayout>

        <!-- Duplicate Page -->
        <LinearLayout
            android:id="@+id/btnDuplicatePage"
            style="@style/Widget.TenDocmas.EditorGridItem"
            android:contentDescription="@string/cd_duplicate_page">

            <ImageView
                style="@style/Widget.TenDocmas.EditorGridIcon"
                android:src="@drawable/ic_duplicate"
                android:importantForAccessibility="no" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/op_duplicate_page"
                android:textAppearance="@style/TextAppearance.TenDocmas.ToolLabel"
                android:layout_marginTop="@dimen/spacing_small" />
        </LinearLayout>

        <!-- Extract Page -->
        <LinearLayout
            android:id="@+id/btnExtractPage"
            style="@style/Widget.TenDocmas.EditorGridItem"
            android:contentDescription="@string/cd_extract_page">

            <ImageView
                style="@style/Widget.TenDocmas.EditorGridIcon"
                android:src="@drawable/ic_extract"
                android:importantForAccessibility="no" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/op_extract_page"
                android:textAppearance="@style/TextAppearance.TenDocmas.ToolLabel"
                android:layout_marginTop="@dimen/spacing_small" />
        </LinearLayout>

        <!-- Add Blank Page -->
        <LinearLayout
            android:id="@+id/btnAddBlankPage"
            style="@style/Widget.TenDocmas.EditorGridItem"
            android:contentDescription="@string/cd_add_blank_page">

            <ImageView
                style="@style/Widget.TenDocmas.EditorGridIcon"
                android:src="@drawable/ic_add_page"
                android:importantForAccessibility="no" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/op_add_page"
                android:textAppearance="@style/TextAppearance.TenDocmas.ToolLabel"
                android:layout_marginTop="@dimen/spacing_small" />
        </LinearLayout>

        <!-- Reorder Pages -->
        <LinearLayout
            android:id="@+id/btnReorderPages"
            style="@style/Widget.TenDocmas.EditorGridItem"
            android:contentDescription="@string/cd_reorder_pages">

            <ImageView
                style="@style/Widget.TenDocmas.EditorGridIcon"
                android:src="@drawable/ic_reorder"
                android:importantForAccessibility="no" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/op_reorder_pages"
                android:textAppearance="@style/TextAppearance.TenDocmas.ToolLabel"
                android:layout_marginTop="@dimen/spacing_small" />
        </LinearLayout>

        <!-- Split PDF -->
        <LinearLayout
            android:id="@+id/btnSplitPdf"
            style="@style/Widget.TenDocmas.EditorGridItem"
            android:contentDescription="@string/cd_split_pdf">

            <ImageView
                style="@style/Widget.TenDocmas.EditorGridIcon"
                android:src="@drawable/ic_split"
                android:importantForAccessibility="no" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/op_split_pdf"
                android:textAppearance="@style/TextAppearance.TenDocmas.ToolLabel"
                android:layout_marginTop="@dimen/spacing_small" />
        </LinearLayout>

    </GridLayout>

    <!-- Content Operations Section -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/section_add_content"
        android:textAppearance="@style/TextAppearance.TenDocmas.Subtitle"
        android:layout_marginBottom="@dimen/spacing_medium" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="4"
        android:layout_marginBottom="@dimen/spacing_large">

        <!-- Add Image -->
        <LinearLayout
            android:id="@+id/btnAddImage"
            style="@style/Widget.TenDocmas.EditorGridItem"
            android:contentDescription="@string/cd_add_image">

            <ImageView
                style="@style/Widget.TenDocmas.EditorGridIcon"
                android:src="@drawable/ic_add_image"
                android:importantForAccessibility="no" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/op_add_image"
                android:textAppearance="@style/TextAppearance.TenDocmas.ToolLabel"
                android:layout_marginTop="@dimen/spacing_small" />
        </LinearLayout>

        <!-- Add Signature -->
        <LinearLayout
            android:id="@+id/btnAddSignature"
            style="@style/Widget.TenDocmas.EditorGridItem"
            android:contentDescription="@string/cd_add_signature">

            <ImageView
                style="@style/Widget.TenDocmas.EditorGridIcon"
                android:src="@drawable/ic_signature"
                android:importantForAccessibility="no" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/op_add_signature"
                android:textAppearance="@style/TextAppearance.TenDocmas.ToolLabel"
                android:layout_marginTop="@dimen/spacing_small" />
        </LinearLayout>

        <!-- Add Watermark -->
        <LinearLayout
            android:id="@+id/btnAddWatermark"
            style="@style/Widget.TenDocmas.EditorGridItem"
            android:contentDescription="@string/cd_add_watermark">

            <ImageView
                style="@style/Widget.TenDocmas.EditorGridIcon"
                android:src="@drawable/ic_watermark"
                android:importantForAccessibility="no" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/op_add_watermark"
                android:textAppearance="@style/TextAppearance.TenDocmas.ToolLabel"
                android:layout_marginTop="@dimen/spacing_small" />
        </LinearLayout>

        <!-- Merge PDFs -->
        <LinearLayout
            android:id="@+id/btnMergePdfs"
            style="@style/Widget.TenDocmas.EditorGridItem"
            android:contentDescription="@string/cd_merge_pdfs">

            <ImageView
                style="@style/Widget.TenDocmas.EditorGridIcon"
                android:src="@drawable/ic_merge"
                android:importantForAccessibility="no" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/op_merge_pdfs"
                android:textAppearance="@style/TextAppearance.TenDocmas.ToolLabel"
                android:layout_marginTop="@dimen/spacing_small" />
        </LinearLayout>

    </GridLayout>

</LinearLayout>
