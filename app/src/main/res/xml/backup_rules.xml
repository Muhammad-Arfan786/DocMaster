<?xml version="1.0" encoding="utf-8"?>
<!--
    Backup rules for Google Play compliance (Android 11 and below).
    Only backs up user preferences, not sensitive data.
    Note: Cache files are not backed up by default.
-->
<full-backup-content>
    <!-- Include shared preferences (user settings) -->
    <include domain="sharedpref" path="." />

    <!-- Exclude device-specific preferences -->
    <exclude domain="sharedpref" path="device.xml" />
</full-backup-content>
